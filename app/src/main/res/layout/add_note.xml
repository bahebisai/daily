<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shadow">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_add_note"
            android:textSize="@dimen/second_title_size"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/ic_done_black_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/title"
            android:hint="title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:lines="1"
            android:textSize="@dimen/note_title_size"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <!--<EditText-->
        <!--android:id="@+id/edit"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:hint="@string/input_text"-->
        <!--android:textSize="@dimen/text_size"-->
        <!--android:gravity="top"-->
        <!--android:background="@color/transparent"-->
        <!--android:cursorVisible="true"-->
        <!--android:paddingLeft="@dimen/text_padding"-->
        <!--android:paddingRight="@dimen/text_padding"/>-->

        <com.leebai.daily.xrichtext.RichTextEditor
            android:id="@+id/content_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shadow">

        <ImageButton
            android:id="@+id/handwrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/ic_create_black_24dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/ic_palette_black_24dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/ic_mic_black_24dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/ic_photo_black_24dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/ic_attach_file_black_24dp"
            android:background="@color/transparent"/>

    </LinearLayout>

</LinearLayout>
